PROCEDURE saisie(var n:INTEGER)
BEGIN
REPEAT
    write("donner la taille du tableau");
    read (n);
UNTIL (n>2);
END

PROCEDURE remplir(var tab:array of INTEGER, n:INTEGER)
VAR
 i:INTEGER;
BEGIN
FOR i FROM 0 TO n-1 STEP 1  DO
    write("remplir le tableau");
    read(tab[i]);
END_FOR
END

PROCEDURE insertion(var tab:array of INTEGER, n:INTEGER);
VAR

BEGIN
